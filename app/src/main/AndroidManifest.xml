<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leeddev.recorder">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />


    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VoiceRecorder">
        <service
            android:name="com.leeddev.recorder.Service.ForegroundService"
            android:enabled="true"
            android:exported="true" />
        <activity
            android:name="com.leeddev.recorder.UI.PrivacyPolicyActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.leeddev.recorder.UI.DetailsActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/TransparentCompat" />

        <!-- Sample AdMob app ID: ca-app-pub-9104652884839341~2301989813 -->

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
        android:value="ca-app-pub-3940256099942544~3347511713" />
        <!--            android:value="ca-app-pub-9104652884839341~2301989813" -->

        <activity
            android:name="com.leeddev.recorder.UI.AudioListActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name="com.leeddev.recorder.UI.SettingActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name="com.leeddev.recorder.UI.MainActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name="com.leeddev.recorder.UI.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.leeddev.recorder.provider"
            android:exported="false"
            android:grantUriPermissions="true">

            <!-- ressource file to create -->
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>